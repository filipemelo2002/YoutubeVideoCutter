{
    "env": {
        "es2021": true,
        "node": true,
        "jest": true
    },
    "extends": [
        "standard",
        "eslint:recommended",
        "plugin:prettier/recommended",
        "prettier/@typescript-eslint",
        "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "prettier",
        "@typescript-eslint"
    ],
    "ignorePatterns": "build",
    "rules": {
        "prettier/prettier": "error"
    },
    "settings": {
        "import-resover": "eslint-import-resolver-typescript",
        "camelcase": "off"
    }
}
